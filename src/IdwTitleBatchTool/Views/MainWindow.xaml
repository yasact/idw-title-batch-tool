<Window x:Class="IdwTitleBatchTool.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:IdwTitleBatchTool.ViewModels"
        mc:Ignorable="d"
        Title="IDW表題欄一括変更ツール"
        Height="900"
        Width="1400"
        MinHeight="500"
        MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesign.Brush.Background}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        FontFamily="{materialDesign:MaterialDesignFont}">

    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <!-- DataGridカラムヘッダーのリサイズグリッパーを見やすく -->
        <Style TargetType="Thumb" x:Key="ColumnHeaderGripperStyle">
            <Setter Property="Width" Value="8"/>
            <Setter Property="Background" Value="{DynamicResource MaterialDesign.Brush.Primary}"/>
            <Setter Property="Cursor" Value="SizeWE"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border Background="{TemplateBinding Background}" Opacity="0.5"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource MaterialDesign.Brush.Secondary}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Section: Folder Selection -->
        <materialDesign:Card Grid.Row="0"
                Padding="16"
                Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <materialDesign:PackIcon Kind="Folder"
                                         VerticalAlignment="Center"
                                         Width="24"
                        Height="24"
                                         Margin="0,0,12,0"/>

                <TextBox Grid.Column="1"
                         Text="{Binding FolderPath, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="フォルダパス"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,12,0"
                         VerticalAlignment="Center"/>

                <Button Grid.Column="2"
                        Content="参照"
                        Command="{Binding SelectFolderCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"/>
            </Grid>
        </materialDesign:Card>

        <!-- Middle Section: DataGrid -->
        <materialDesign:Card Grid.Row="1"
                Padding="0"
                Margin="0,0,0,16">
            <DataGrid x:Name="dataGrid"
                      ItemsSource="{Binding Properties}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      SelectionMode="Extended"
                      SelectionUnit="Cell"
                      materialDesign:DataGridAssist.CellPadding="8 4"
                      materialDesign:DataGridAssist.ColumnHeaderPadding="8 4"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto"
                      GridLinesVisibility="Vertical"
                      VerticalGridLinesBrush="{DynamicResource MaterialDesign.Brush.Primary}"
                      BeginningEdit="DataGrid_BeginningEdit">
                <DataGrid.CommandBindings>
                    <CommandBinding Command="ApplicationCommands.Paste" Executed="DataGrid_Paste" />
                    <CommandBinding Command="ApplicationCommands.Copy" Executed="DataGrid_Copy" />
                </DataGrid.CommandBindings>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ファイル名"
                            Binding="{Binding FileName}"
                            IsReadOnly="True"
                            Width="180"/>
                    <DataGridTextColumn Header="会社名1"
                            Binding="{Binding CompanyName1}"
                            Width="150"/>
                    <DataGridTextColumn Header="会社名2"
                            Binding="{Binding CompanyName2}"
                            Width="150"/>
                    <DataGridTextColumn Header="名称1"
                            Binding="{Binding Title1}"
                            Width="120"/>
                    <DataGridTextColumn Header="名称2"
                            Binding="{Binding Title2}"
                            Width="120"/>
                    <DataGridTextColumn Header="図番"
                            Binding="{Binding DrawingNumber}"
                            Width="100"/>
                    <DataGridTextColumn Header="決定No"
                            Binding="{Binding DecisionNo}"
                            Width="80"/>
                    <DataGridTextColumn Header="製図"
                            Binding="{Binding DrawnBy}"
                            Width="80"/>
                    <DataGridTextColumn Header="設計"
                            Binding="{Binding DesignedBy}"
                            Width="80"/>
                    <DataGridTextColumn Header="検図"
                            Binding="{Binding CheckedBy}"
                            Width="80"/>
                    <DataGridTextColumn Header="承認"
                            Binding="{Binding ApprovedBy}"
                            Width="80"/>
                    <DataGridTextColumn Header="作成日"
                            Binding="{Binding CreationDate, StringFormat={}{0:yyyy/MM/dd}}"
                            Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </materialDesign:Card>

        <!-- Bottom Section: Buttons and Status -->
        <materialDesign:Card Grid.Row="2"
                Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Command="{Binding ReadCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Margin="0,0,8,0"
                        Width="100">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FileDownload"
                                VerticalAlignment="Center"
                                Margin="0,0,8,0"/>
                        <TextBlock Text="読込"
                                VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Grid.Column="1"
                        Command="{Binding WriteCommand}"
                        Style="{StaticResource MaterialDesignRaisedSecondaryButton}"
                        Margin="0,0,8,0"
                        Width="100">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FileUpload"
                                VerticalAlignment="Center"
                                Margin="0,0,8,0"/>
                        <TextBlock Text="書込"
                                VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Grid.Column="2"
                        Command="{Binding ApplyFileNameCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FileFind"
                                VerticalAlignment="Center"
                                Margin="0,0,8,0"/>
                        <TextBlock Text="ファイル名から取得"
                                VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Status -->
                <StackPanel Grid.Column="3"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True"
                                 Style="{StaticResource MaterialDesignCircularProgressBar}"
                                 Width="20"
                            Height="20"
                                 Margin="0,0,12,0"
                                 Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <TextBlock Text="{Binding StatusText}"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource MaterialDesign.Brush.Primary}"/>
                </StackPanel>

                <Button Grid.Column="4"
                        Content="閉じる"
                        Command="{Binding CloseCommand}"
                        Style="{StaticResource MaterialDesignFlatButton}"/>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>
